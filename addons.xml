<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.nobrains" name="NoBrains" version="0.1.9" provider-name="NoBrains">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">NoBrains</summary>
    <description lang="en">NoBrains Wizard allows you to get access to the latest Aftermath Custom Builds.</description>
    <platform>all</platform>
  </extension>
</addon>

    <addon id="repository.nobrain" name="Official NoBrainsRepo" version="0.1.1" provider-name="Bas">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="Official NoBrainsRepo">
            <info compressed="false">https://raw.githubusercontent.com/basziee/NoBrainsRepo/repo/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/basziee/NoBrainsRepo/repo/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/basziee/NoBrainsRepo/repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>The official NoBrains repo.</summary>
            <description>The official NoBrains Repo. [CR]A great new start</description>
            <platform>all</platform>
    </extension>
</addon>
</addons>
